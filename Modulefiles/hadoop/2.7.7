#%Module1.0
proc ModulesHelp { } {
  puts stderr "Hadoop/2.7.7 - Adds Hadoop 2.7.7 from /opt/soft/hadoop-2.7.7 to the environment."
}
set name    hadoop
set version 2.7.7
conflict	hadoop
module-whatis                   "Hadoop 2.7.7"

if ![ is-loaded 'java/1.8.0' ] {
    module load java/1.8.0
}

if ![ is-loaded 'maven/3.8.1' ] {
    module load maven/3.8.1
}

prereq java/1.8.0

set           HADOOP_PATH     /opt/soft/hadoop-2.7.7
prepend-path 	PATH 		        $HADOOP_PATH/bin
prepend-path 	PATH 		        $HADOOP_PATH/sbin

setenv	 		HADOOP_HOME	      /opt/soft/hadoop-2.7.7
