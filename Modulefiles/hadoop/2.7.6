#%Module1.0
proc ModulesHelp { } {
  puts stderr "Hadoop/2.7.6 - Adds Hadoop 2.7.6 from /usr/local/hadoop-2.7.6 to the environment."
}
set name    hadoop
set version 2.7.6
conflict	hadoop
module-whatis                   "Hadoop 2.7.6"

if ![ is-loaded 'java/1.8.0' ] {
    module load java/1.8.0
}

if ![ is-loaded 'maven/3.8.1' ] {
    module load maven/3.8.1
}

prereq java/1.8.0

set           HADOOP_PATH     /usr/local/hadoop-2.7.6
prepend-path 	PATH 		        $HADOOP_PATH/bin
prepend-path 	PATH 		        $HADOOP_PATH/sbin

setenv	 		HADOOP_HOME	      /usr/local/hadoop-2.7.6
