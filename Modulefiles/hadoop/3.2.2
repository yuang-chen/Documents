#%Module1.0
proc ModulesHelp { } {
  puts stderr "Hadoop/3.2.2 - Adds Hadoop 3.2.2 from /opt/soft/hadoop-3.2.2 to the environment."
}
set name    hadoop
set version 3.2.2
conflict	hadoop
module-whatis                   "Hadoop 3.2.2"

if ![ is-loaded 'java/1.8.0' ] {
    module load java/1.8.0
}

if ![ is-loaded 'maven/3.8.1' ] {
    module load maven/3.8.1
}

prereq java/1.8.0

set           HADOOP_PATH     /opt/soft/hadoop-3.2.2
prepend-path 	PATH 		        $HADOOP_PATH/bin
prepend-path 	PATH 		        $HADOOP_PATH/sbin

setenv	 		HADOOP_HOME	      /opt/soft/hadoop-3.2.2
